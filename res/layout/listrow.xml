<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/list_userImage"
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_userID"
        android:layout_gravity="right"
        android:layout_marginLeft="6dip"
        android:layout_marginTop="2dip"
        android:background="#f0f0f0"
        android:contentDescription="@string/empty"
        android:padding="1dip"
        android:src="@drawable/ic_action_userimage" />

    <TextView
        android:id="@+id/list_userID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="5dip"
        android:ellipsize="marquee"
        android:gravity="right"
        android:lines="1"
        android:paddingRight="5dip"
        android:text="@string/empty"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_since"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_userID"
        android:layout_alignParentLeft="true"
        android:text="@string/empty"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/list_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_userImage"
        android:layout_below="@+id/list_userID"
        android:layout_marginBottom="2dip"
        android:layout_toLeftOf="@+id/list_userImage"
        android:autoLink="web"
        android:gravity="right"
        android:text="@string/empty"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/list_timeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/list_text"
        android:lines="1"
        android:text="@string/empty"
        android:textSize="12sp" />

</RelativeLayout>